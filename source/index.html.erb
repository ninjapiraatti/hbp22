---
title: HBP
---
<link rel="stylesheet" href="stylesheets/all.css">
<header class='nav-bg-blue'>
<% data.stuff.header.each do |id, header| %>
  <% en_header = localize_entry(header, 'en') %>
  <nav>
    <ul id="main-nav" class="nav">
      <li>
        <a href='/'>
          <div class="text-white">
          <img src='<%= header["logo"]["url"] %>'/>
            <%= en_header["title"] %>
          </div>
        </a>
      </li>
      <li>
          <a class="nav-link text-white" href="#info"><%= en_header["info"] %></a>
      </li>
      <li>
          <a class="nav-link text-white" href="#gallery"><%= en_header["moments"] %></a>
      </li>
      <li>
          <a class="nav-link text-white" href="#yhteistyokumppanit"><%= en_header["partners"] %></a>
      </li>
      <li>
          <a class='nav-link text-white language-link' href='/en/'><%= en_header["english"] %></a>
      </li>
      <li>
          <a class='nav-link text-white language-link' href='/fi/'><%= en_header["finnish"] %></a>
      </li>
    </ul>
  </nav>
<% end %>
</header>

<div class="jumbotron">
  <div class="container">

    <div class="md-col-8 md-offset-2">
        <% data.stuff.header.each do |id, header| %>
          <% en_header = localize_entry(header, 'en') %>
          <h1 class="black"><%= en_header["title"] %></h1>
        <% end %>
    </div>
  </div>

  <div class="md-col-8 md-offset-2">
    <% data.stuff.body.each do |id, body| %>
      <% en_body = localize_entry(body, 'en') %>
      <p class="thin"><%= en_body["text_body"] %></p>
    <% end %>
  </div>

  <footer>
    <% data.stuff.footer.each do |id, footer| %>
      <% en_footer = localize_entry(footer, 'en') %>
      <p class="lightItalic"><%= en_footer["copyright"] %></p>
    <% end %>
  </footer>

</div>
<link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@latest/dist/css/bootstrap.min.css'>
<script src='https://cdn.jsdelivr.net/npm/bootstrap@latest/dist/js/bootstrap.bundle.min.js'></script>